# Security settings for npm
audit=true
fund=false
loglevel=warn

# Enforce package integrity verification
verify-store-integrity=true

# Prevent accidental publishing of private code
access=restricted

# Use strict SSL
strict-ssl=true

# Focus on security in audits
audit-level=moderate

# Avoid running scripts from dependencies when installing (can be a security risk)
ignore-scripts=true

# Cache settings
cache-max=0
prefer-offline=true 